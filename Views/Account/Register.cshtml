@model Employee
@{
    Layout = null;
    ViewData["Title"] = "HomePage";
}

<!DOCTYPE html>
<html>
<head>
    <title>Registration Page</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/select2/select2.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body style="background-color:white;">
    
    <div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
        
                <div class="login100-form-register validate-form">
                    <span class="login100-form-title-register  " style="font-weight:200">
        Register yourself
    </span>
       @using(Html.BeginForm("Register","Account", FormMethod.Post ))
       
            {
                        <div style="text-align:center; padding-top:25px;"> @ViewBag.Message</div>
               
            <br />
                        <div class="wrap-input100 validate-input" data-validate="Enter Valid Email ">
                
                @*<input asp-for=Username type="text" id="username" name="username" required>*@
                @Html.TextBoxFor(m=>m.Username,new{@class="input100",autocomplete = "off", @type="Email"})
                            <span class="focus-input100"></span>
                            <span class="label-input100">Email</span>
                            <span asp-validation-for="Username" class="alert-danger" id="Email"></span>
                        
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Enter Correct First Name">

                            @*<input asp-for=FirstName type="text" id="first_name" name="first_name" required>*@
                @Html.TextBoxFor(m=>m.FirstName,new{@class="input100",autocomplete = "off", @type="text"})
                            <span class="focus-input100"></span>
                            <span class="label-input100">First Name</span>
                            <span asp-validation-for="FirstName" class="alert-danger" id="FirstName"></span>
            </div>
                        <div class="wrap-input100 validate-input" data-validate="Enter Correct Last Name">
                
                @*<input asp-for=LastName type="text" id="last_name" name="last_name" required>*@
                @Html.TextBoxFor(m=>m.LastName,new{@class="input100",autocomplete = "off", @type="text"})
                            <span class="focus-input100"></span>
                            <span class="label-input100">Last Name</span>
                            <span asp-validation-for="LastName" class="alert-danger" id=" Lastname"></span>
            </div>
                        <div class="wrap-input100 validate-input" data-validate="Password is required">
               
                @*<input asp-for=Password type="password" id="password" name="password" required>*@
                @Html.PasswordFor(m=>m.Password,new{@class="input100",autocomplete = "off", @type="password"})
                            <span class="focus-input100"></span>
                            <span class="label-input100">Password</span>
                            <span asp-validation-for="Password" class="alert-danger" id="Password"></span>
            </div>
                        <div class="wrap-input100 validate-input" data-validate="Password does not match">
                
                @*<input asp-for="ConfirmPassword" type="password" id="confirm_password" name="confirm_password" required>*@
                @Html.PasswordFor(m=>m.ConfirmPassword,new{@class="input100",autocomplete = "off", @type="password"})
                            <span class="focus-input100"></span>
                            <span class="label-input100">Confirm Password</span>
                            <span asp-validation-for="ConfirmPassword" class="alert-danger" id="Password"></span>
                        </div>
                        <div class="flex-sb-m w-full p-t-3 "></div>

                        <br />
                        <div class="container-login100-form-btn">
                        </div>
                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn " onclick="displayalert" >Submit</button>
                        </div>
                         if(ViewBag.LoginExistsorNot==0)
                {
            <div class="alert-validate::after" style="text-align:center">
                                
                                <button type="button" class="login100-form-btn " onclick="location.href='@Url.Action("Index","Home")'">Login</button>

                                </div>
            }
        }
        </div>
                <div class="login100-more" >
                </div>
        </div>
    </div>
    </div>

    <script src="~/lib/jquery/dist/jquery-3.2.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/lib/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/daterangepicker/moment.min.js"></script>
    <script src="~/lib/daterangepicker/moment.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/countdowntime/countdowntime.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
</body>
</html>
